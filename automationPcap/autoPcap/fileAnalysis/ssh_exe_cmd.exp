#!/usr/bin/expect -f

set ip [lindex $argv 0]  
set user [lindex $argv 1]  
set password [lindex $argv 2]  
set cmd [lindex $argv 3]  

set timeout 300

spawn ssh $user@$ip "$cmd"
expect {
	"*yes/no" { send "yes\r"; exp_continue}
	"*password:" { send "$password\r" }
}

expect {
	 "*assword:" {set timeout 5;expect eof}
}

exit

